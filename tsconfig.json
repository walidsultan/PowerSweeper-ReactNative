{
  "compilerOptions": {
    "module":"es2015",
      "target": "es2015",
      "jsx": "react",
      "rootDir": "src",
      "outDir": "build",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "skipLibCheck": true,
      "moduleResolution":"Node"                    
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]  // Include all TypeScript and TSX files in the 'src' directory
}